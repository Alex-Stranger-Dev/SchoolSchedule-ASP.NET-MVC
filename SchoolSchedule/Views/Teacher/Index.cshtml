@model IEnumerable<SchoolSchedule.Models.Teacher>

@{
    ViewBag.Title = "List of Teachers";
}

<h2>Teachers</h2>

<td>
    @Html.ActionLink("Add New", "InsertForm", "Teacher", new { area = "" }, new { @class = "btn btn-primary" })
</td>
<table class="table table-striped">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>Name</th>
            <th>Last Name</th>
            <th>Subject<th>
        </tr>
    </thead>

    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                @*<td>@teacher.Id</td>*@
                <td>@teacher.Name</td>
                <td>@teacher.LastName  </td>
                <td>@teacher.Subject  </td>


                <td>
                    @Html.ActionLink("Details", "Details", new { Id = teacher.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>



